<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1>タスク作成</h1>
      <%= form_with model: @task do |f| %>
        <%= render 'shared/error', object: f.object %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :contents, class: "form-label" %>
          <%= f.text_area :contents, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :open, class: "form-label" %>
          <%= f.check_box :open %>
        </div>
        <div class="mb-3">
          <%= f.label :category_id, class: "form-label" %>
          <%= f.collection_select :caategory_id, @categories, :id, :name, class: "form-control" %>
        </div>
        <div class='mb-3'>
          <%= f.fields_for :taskschedule do |schedule_fields| %>
            <%= schedule_fields.label :start_at %>
            <%= schedule_fields.datetime_select :start_at %>
            <%= schedule_fields.label :end_at %>
            <%= schedule_fields.datetime_select :end_at %>
          <% end %>
        </div>
        <div class='text-end'>
        <%= f.submit "保存", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>